DB_MIN_POOL_SIZE=5
DB_MAX_IDLE_TIME=30000
DB_SERVER_SELECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000
DB_COMPRESSION_LEVEL=6
DB_READ_PREFERENCE=secondaryPreferred
DB_WRITE_CONCERN_W=1
DB_WRITE_CONCERN_J=false
DB_WRITE_CONCERN_TIMEOUT=5000
DB_HEARTBEAT_FREQUENCY=10000
DB_RETRY_WRITES=true
DB_RETRY_READS=true

