# Compression Settings
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024
COMPRESSION_MEM_LEVEL=8
COMPRESSION_WINDOW_BITS=15
REMOVE_NULL_VALUES=true

# Rate Limiting Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL=true

# Cache Settings
CACHE_DEFAULT_TTL=3600
CACHE_SHORT_TTL=300
CACHE_MEDIUM_TTL=1800
CACHE_LONG_TTL=3600
CACHE_VERY_LONG_TTL=86400

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=100
LOG_PERFORMANCE_STATS=true
PERFORMANCE_STATS_INTERVAL=300000

# Memory Management
MAX_MEMORY_CACHE_SIZE=104857600
OBJECT_POOL_MAX_SIZE=100
GC_INTERVAL=60000

# Security Performance
JWT_CACHE_TTL=300
TOKEN_BLACKLIST_TTL=86400
BCRYPT_ROUNDS=10

# API Performance
API_REQUEST_TIMEOUT=30000
API_MAX_REQUEST_SIZE=10485760
API_ENABLE_ETAG=true
API_ENABLE_COMPRESSION=true

# Static File Caching
STATIC_FILE_MAX_AGE=86400
STATIC_FILE_ENABLE_ETAG=true
STATIC_FILE_ENABLE_LAST_MODIFIED=true

# Development Performance Settings
DEV_ENABLE_DEBUG_LOGS=false
DEV_ENABLE_QUERY_LOGGING=true
DEV_ENABLE_CACHE_STATS=true
DEV_STATS_REPORT_INTERVAL=300000

# Production Performance Settings
PROD_DISABLE_X_POWERED_BY=true
PROD_ENABLE_HELMET=true
PROD_TRUST_PROXY=true
PROD_ENABLE_COMPRESSION=true
